file = {:home/mowglie/Files/Zumb{\"{u}}hl, Steiner, Nussbaumer - 2008 - 19th century glacier representations and fluctuations in the central and western European Alps An.pdf:pdf},
isbn = {0921-8181},
issn = {09218181},
journal = {Global and Planetary Change},
keywords = {glacier fluctuations,historical sources,neural network,sensitivity analysis},
number = {1-2},
pages = {42--57},
title = {{19th century glacier representations and fluctuations in the central and western European Alps: An interdisciplinary approach}},
volume = {60},
