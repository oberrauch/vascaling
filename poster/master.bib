doi = {10.1007/s10584-008-9393-1},
file = {:home/mowglie/Files/Steiner et al. - 2008 - Sensitivity of European glaciers to precipitation and temperature – two case studies.pdf:pdf},
isbn = {0165-0009},
issn = {0165-0009},
